#!/bin/bash

# Nama database
DB_NAME="newdbevolusipark"

# Format tanggal dan waktu: YYYY-MM-DD_HH-MM
TIMESTAMP=$(date +"%Y-%m-%d_%H-%M")

# Nama file backup
BACKUP_FILE="${DB_NAME}_backup_${TIMESTAMP}.sql"

# Jalankan pg_dump
pg_dump -U postgres -d "$DB_NAME" -F p -f "$BACKUP_FILE"

echo "Backup selesai: $BACKUP_FILE"
